sudo apt install php php-json php-ctype php-curl php-mbstring php-xml php-zip php-tokenizer php-tokenizer libpcre3 --no-install-recommends

sudo apt install php-dev php-pear
sudo pecl install mongodb
php --ri mongo
sudo nano /etc/php/7.4/mods-available/mongo.ini
cd cli/conf.d/
sudo ln -s /etc/php/7.4/mods-available/mongo.ini 30-mongo.ini
php --ri mongo

sudo apt install mongodb
sudo systemctl start mongodb 

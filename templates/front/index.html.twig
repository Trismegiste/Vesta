{% extends "front/base.html.twig" %}

{% block content_title %}{% trans %}SEARCH TITLE{% endtrans %}{% endblock %}

{% block content %}
    <div class="pure-g">
        <div class="pure-u-1-3"></div>
        <div class="pure-u-1-3">
            <form class="pure-form pure-form-stacked buy-search">
                <input type="text" class="pure-input-1" placeholder="VILLE"/>
                <div class="pure-g">
                    <div class="pure-u-2-5">
                        <input type="text" class="pure-input-1 price-currency" placeholder="€"/>
                    </div>
                    <div class="pure-u-1-5"><span>À</span></div>
                    <div class="pure-u-2-5">
                        <input type="text" class="pure-input-1 price-currency" placeholder="€"/>
                    </div>
                </div>
                <div class="pure-g">
                    <div class="pure-u-1-5"><span>TYPE</span></div>
                    <div class="pure-u-4-5">
                        <select class="pure-input-1">
                            <option>Appartement</option>
                            <option>Villa</option>
                        </select>
                    </div>
                </div>
                <input type="button" class="pure-button pure-input-1" value="Recherchez"/>
            </form>
        </div>
        <div class="pure-u-1-3"></div>
    </div>
{% endblock %}